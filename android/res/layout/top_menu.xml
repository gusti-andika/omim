<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_activity"
        android:layout_margin="10dp"
        android:background="?routingSlot"
        android:gravity="center_horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/layout_activityType"
            android:gravity="center_horizontal">

            <TextView
                android:text="Activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activityTypeLabel"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:fontFamily="sans-serif"
                android:textSize="18sp" />

            <TextView
                android:text="Running"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activityTypeText"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/layout_route"
            android:gravity="center_horizontal">

            <TextView
                android:text="Route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activityRouteLabel"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:text="none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activityRouteText"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:text="GO CYCLING"
        android:layout_height="wrap_content"
        android:id="@+id/goBtn"
        style="@style/MwmWidget.Tracker.Go"
        android:gravity="center"
        android:layout_below="@id/layout_activity"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/MwmTextAppearance.Toolbar.Title" />

    <Button
        android:text="GPX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_activity"
        android:layout_alignRight="@+id/layout_activity"
        android:layout_alignEnd="@+id/layout_activity"
        android:id="@+id/gpxBtn"
        style="@style/MwmWidget.Button.Accent" />


</RelativeLayout>